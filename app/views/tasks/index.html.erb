<div class="max-w-3xl mx-auto px-4 my-16">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="font-bold text-3xl">My Tasks</h1>

    <div>
      <%= form_with url: tasks_path, method: :get, data: { turbo_frame: "tasks", turbo_action: "advance", controller: 'form', action: "input->form#submit" } do %>
        <%= text_field_tag "filter", nil, placeholder: "Filter (title, status)", class: "inline-block rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
      <% end %>
    </div>
  </div>
  
  <%= turbo_frame_tag "tasks" do %>
   <div class="max-w-full overflow-x-auto flex flex-wrap justify-center">
      <% @tasks.each do |task| %>
        <% if task.user_id == current_user.id %>
          <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 px-6 py-4 rounded-lg shadow-md m-4 max-w-sm">
            <p class="font-bold text-lg mb-2">
              <%= task.title %>
              <span class="inline-block text-white text-xs font-bold uppercase px-2 py-1 rounded-full ml-2 <%= task.status == "pending" ? 'bg-blue-500' : 'bg-green-500' %>">
                <%= task.status %>
              </span>
            </p>
            <p class="text-gray-700 mb-2"><%= task.description %></p>
            <p class="text-gray-600"><strong>Due Date:</strong> <%= task.dueDate %></p>
            <div class="flex justify-end mt-4">
              <%= link_to 'Show', task,
              data: {turbo_frame: "_top"},
               class: "font-bold text-blue-500 hover:text-blue-700 hover:bg-white border border-blue-500 rounded-full px-4 py-2 transition duration-300 ease-in-out" %>
              <%= link_to 'Edit', edit_task_path(task),
              data: {turbo_frame: "_top"}, class: "font-bold text-green-500 hover:text-green-700 hover:bg-white border border-green-500 rounded-full px-4 py-2 ml-2 transition duration-300 ease-in-out" %>
              <%= button_to 'Delete', task,data: {turbo_frame: "_top"}, method: :delete, remote: true, data: { turbo_confirm: 'Are you sure?' }, class: "font-bold bg-transparent text-red-500 hover:text-red-700 hover:bg-white border border-red-500 rounded-full px-4 py-2 ml-2 transition duration-300 ease-in-out" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
