<div class="flex justify-center mt-4 mb-8">
  <%= link_to 'New', new_task_path, class: "bg-white text-green-500 hover:text-white hover:bg-green-700 border border-green-500 rounded-full px-4 py-2 transition duration-300 ease-in-out" %>
</div>

<div class="max-w-full overflow-x-auto flex flex-wrap justify-center">
  <% @tasks.each do |task| %>
    <% if task.user_id == current_user.id %>
      <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 px-6 py-4 rounded-lg shadow-md m-4 max-w-sm">
        <p class="font-bold text-lg mb-2"><%= task.title %></p>
        <p class="text-gray-700 mb-2"><%= task.description %></p>
        <p class="text-gray-600"><strong>Due Date:</strong> <%= task.dueDate %></p>
        <div class="flex justify-end mt-4">
          <%= link_to 'Show', task, class: "font-bold text-blue-500 hover:text-blue-700 hover:bg-white border border-blue-500 rounded-full px-4 py-2 transition duration-300 ease-in-out" %>
          <%= link_to 'Edit', edit_task_path(task), class: "font-bold text-green-500 hover:text-green-700 hover:bg-white border border-green-500 rounded-full px-4 py-2 ml-2 transition duration-300 ease-in-out" %>
          <%= button_to 'Delete', task, method: :delete, remote: true, data: { turbo_confirm: 'Are you sure?' }, class: "font-bold bg-transparent text-red-500 hover:text-red-700 hover:bg-white border border-red-500 rounded-full px-4 py-2 ml-2 transition duration-300 ease-in-out" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

