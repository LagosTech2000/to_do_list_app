<div class="max-w-3xl mx-auto px-4 mt-2">
  <div class="flex items-center justify-between pb-6 border-b dark:border-slate-700">
    <h1 class="font-bold text-3xl">My Tasks</h1>
    <div class="flex items-center justify-end">
      <%= form_with url: tasks_path, method: :get, data: { turbo_frame: "tasks", turbo_action: "advance", controller: 'form', action: "input->form#submit" } do %>
        <%= text_field_tag "filter", nil, placeholder: "Filter (title)", class: "inline-block rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
      <% end %>
    </div>
  </div>

  <%= turbo_frame_tag "tasks_data" do %>
  <div class="flex flex-wrap justify-center">
  <!-- Filter Links -->
  <div class="text-center mb-6 md:mb-0 mr-10">
    <h2 class="text-lg font-bold mb-2">Sort:</h2>
    <div class="flex items-center space-x-4">
      <%= link_to "Title", tasks_path(column: "title"), class: "text-gray-700 rounded-full p-2 bg-transparent shadow-md hover:bg-gray-200 transition duration-300 ease-in-out" %>
      <%= link_to "Description", tasks_path(column: "description"), class: "text-gray-700 rounded-full p-2 bg-transparent shadow-md hover:bg-gray-200 transition duration-300 ease-in-out" %>
      <%= link_to "Status", tasks_path(column: "status"), class: "text-gray-700 rounded-full p-2 bg-transparent shadow-md hover:bg-gray-200 transition duration-300 ease-in-out" %>
    </div>
  </div>

  <!-- Sort Links -->
  <div class="text-center">
    <h2 class="text-lg font-bold mb-2">Filter:</h2>
    <div class="flex items-center space-x-4">
      <%= link_to "Completed", tasks_path(status: "completed"), class: " text-gray-700 rounded-full p-2 bg-transparent shadow-md hover:bg-gray-200 transition duration-300 ease-in-out" %>
      <%= link_to "Pending", tasks_path(status: "pending"), class: "text-gray-700 rounded-full p-2 bg-transparent shadow-md hover:bg-gray-200 transition duration-300 ease-in-out" %>
      <%= link_to "Reset filter", tasks_path, class: "text-gray-700 rounded-full p-2 bg-transparent shadow-md hover:bg-gray-200 transition duration-300 ease-in-out" %>
    </div>
  </div>
</div>




<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      <%= turbo_frame_tag "tasks_data" do %>
   
   <div class="max-w-full overflow-x-auto flex flex-wrap justify-center">
      <% @tasks.each do |task| %>
        <% if task.user_id == current_user.id %>
          <div class="bg-white text-wrap border-l-8 <%= task.status == "pending" ? 'border-blue-500' : 'border-green-500' %> text-black px-6 py-4 rounded-lg shadow-md m-4 max-w-sm">
            <p style="overflow-wrap: break-word;" class="font-bold text-lg mb-2">
              <%= task.title %>
              <span class="inline-block text-white text-xs font-bold capitalize px-2 py-1 rounded-full ml-2 <%= task.status == "pending" ? 'bg-blue-500' : 'bg-green-500' %>">
                <%= task.status %>
              </span>
            </p>
            <p class="text-gray-700 mb-2" style="overflow-wrap: break-word;"><%= task.description %></p> <!-- Apply overflow-wrap here -->
           <p class="text-gray-600"><strong>Due Date:</strong> <%= task.dueDate.strftime('%B %d, %Y %I:%M %p') %></p>


             <div class="flex justify-end mt-4">
                <%= link_to task, data: { turbo_frame: "_top" }, class: "font-bold text-gray-400 hover:text-white hover:bg-blue-500 border border-gray-400 rounded-full px-4 py-2 transition duration-300 ease-in-out" do %>
                  <i class="fas fa-eye"></i>
                <% end %>

                <%= link_to edit_task_path(task), data: { turbo_frame: "_top" }, class: "font-bold text-gray-400 hover:text-white hover:bg-green-500 border border-gray-400 rounded-full px-4 py-2 ml-2 transition duration-300 ease-in-out" do %>
                  <i class="fas fa-edit"></i>
                <% end %>

                <%= button_to task, method: :delete, remote: true, data: { turbo_frame: "_top", turbo_confirm: 'Are you sure?' }, class: "font-bold bg-transparent text-gray-400 hover:text-white hover:bg-red-500 border border-gray-400 rounded-full px-4 py-2 ml-2 transition duration-300 ease-in-out" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>

          </div>
        <% end %>
      <% end %>
      
    </div>
  <% end %>
  
    </div>
  <% end %>
</div>
