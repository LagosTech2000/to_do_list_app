<div class="fixed inset-0 flex items-center justify-center z-50">
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <div class="bg-white rounded-lg shadow-xl max-h-full w-4/5 md:w-1/2 lg:w-1/3 z-50 overflow-y-auto p-6">
    <div class="flex justify-between items-center border-b pb-4 mb-4">
      <h1 class="text-2xl font-bold">New Conversation</h1>
      <%= link_to cancel_form_path, data: { turbo_frame: "new_conversation_#{current_user.id}" }, class: "text-gray-600 hover:text-gray-900" do %>
        <i class="fas fa-times text-lg"></i>
      <% end %>
    </div>

    <%= form_with url: search_users_conversation_path(-1), method: :get, local: true, class: "space-y-6", data: { turbo_frame: "user_select_frame" } do |form| %>
      <div class="space-y-2">
        <%= form.label :search, "Select User", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :search, id: "user-search", placeholder: "Search users...", class: "bg-gray-200 p-2 w-full border border-transparent rounded-md shadow-sm focus:outline-none focus:border-blue-500 focus:ring focus:ring-blue-200 mb-2", data: { turbo_frame: "user_select_frame" } %>
        
        <%= turbo_frame_tag "user_select_frame_#{current_user.id}" do %>          
        <% end %>
      </div>
    <% end %>

    <%= form_with model: Conversation.new, url: conversations_path, data: { turbo_frame: "conversations_#{current_user.id}" }, method: :post, local: true, class: "space-y-6" do |form| %>
      <div class="space-y-2">
        <%= form.label :content, "Message (Optional)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :content, placeholder: "Hi....", class: "bg-gray-200 p-2 w-full border border-transparent rounded-md shadow-sm focus:outline-none focus:border-blue-500 focus:ring focus:ring-blue-200 text-center" %>
      </div>

      <div>
        <%= form.submit "Create Conversation", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
